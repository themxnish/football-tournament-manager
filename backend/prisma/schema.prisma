generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  fullName  String?
  role      String   @default("volunteer")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  category    String
  coach       String
}